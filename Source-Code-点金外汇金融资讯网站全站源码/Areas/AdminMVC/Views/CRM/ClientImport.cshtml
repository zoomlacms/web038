@{ 
Layout = "~/Areas/AdminMVC/Views/Shared/_layTop.cshtml";
}
@section head{<title>@Resources.L.客户导入</title>}
@section content{
<div class="d-flex flex-row">
<form method="post"  action="Import_Client" enctype="multipart/form-data"  >
<div class="input-group">
    <input type="file" class="form-control m50rem_50" name="file_up" id="file_up"  accept=".xlsx"/>
    <span class="input-group-append">
        <input type="submit" class="btn btn-outline-info" value="@Resources.L.上传文档" onclick="return checkSub();" />
    </span>
</div>
</form>
<form method="post"  action="Import_DownTlp" class="ml-1">
<input type="submit" value="@Resources.L.下载客户导入模板" class="btn btn-outline-info" />
</form>
</div>
<div class="alert alert-info w-100 mt-2">
    <div>@Resources.L.下载模板_notice</div>
    <div>@Resources.L.打开页面_notice</div>
</div>
    }
@section script{
<script>
    function checkSub() {
        var fname=$("#file_up").val();
        if (fname == "") { alert("未选定文件"); return false; }
        return true;
    }
</script>
}