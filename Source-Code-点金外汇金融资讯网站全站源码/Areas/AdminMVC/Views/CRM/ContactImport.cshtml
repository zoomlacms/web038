@model ZoomLa.Model.Client.M_CRMS_Client
@{
  
}
@section head{
    <title>@Resources.L.联系人导入</title>
}
@section content{
<form method="post" action="ContactImport_Upload" enctype="multipart/form-data" style="float:left;">
    <div class="input-group" style="width:580px;">
        <input type="file" class="form-control text_500" name="file_up" id="file_up" accept=".xlsx" />
        <span class="input-group-btn">
            <input type="submit" class="btn btn-info" value="@Resources.L.上传文档" onclick="return checkSub();" />
        </span>
    </div>
</form>
<form method="post" action="ContactImport_Down" style="float:left;margin-left:5px;">
    <input type="submit" value="@Resources.L.下载导入模板" class="btn btn-primary" />
</form>
<div class="clearfix"></div>
<div class="alert alert-info" style="margin-top:5px;">
    <div>@Resources.L.联系人导入_notice1</div>
    <div>@Resources.L.联系人导入_notice2</div>
    <div>@Resources.L.联系人导入_notice3</div>
    <div>@Resources.L.联系人导入_notice4</div>
</div>
    }
@section script{
    <style type="text/css">
        #navHolder {
            display: none;
        }
    </style>
    <script>
    function checkSub() {
        var fname=$("#file_up").val();
        if (fname == "") { alert("未选定文件"); return false; }
        return true;
    }
    </script>
}