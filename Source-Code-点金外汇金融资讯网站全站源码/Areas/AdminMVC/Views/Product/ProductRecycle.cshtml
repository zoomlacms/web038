@model ZoomLa.SQLDAL.SQL.PageSetting
@{ 
    string apiUrl = "Product_API?action=";

}
@section head{<title>@Resources.L.商品回收站</title>}
@section content{
@MvcHtmlString.Create(Call.SetBread(new Bread[] {
new Bread("{admin}"),
new Bread("ProductManage",Resources.L.商品管理),
new Bread(Request.RawUrl,Resources.L.回收站)
}))
<div class="list_choice" style="width:100%;">
    <table class="table table-bordered table-striped" id="EGV_Table">
        <thead>
            <tr>
                <th class="w1rem"></th>
                <th class="w1rem">ID</th>
                <th style="width:90px;">@Resources.L.商品图片</th>
                <th>@Resources.L.商品名称</th>
                <th>@Resources.L.录入者</th>
                <th>@Resources.L.单位</th>
                <th>@Resources.L.库存</th>
                <th>@Resources.L.价格</th>
                <th>@Resources.L.类型</th>
                <th>@Resources.L.商品属性</th>
                <th>@Resources.L.销售中</th>
                <th>@Resources.L.状态</th>
                <th>@Resources.L.操作</th>
            </tr>
        </thead>
        @Html.Partial("Product_List")
    </table>
    <div style="margin-top:5px;">
    <input type="button" ID="Rec_B" class="btn btn-outline-info" value="@Resources.L.批量还原" onclick="mvcpage.bat({url:'@(apiUrl+"recover")'});"/>
    <input type="button" ID="Del_B" class="btn btn-outline-danger" value="@Resources.L.批量删除" onclick="mvcpage.bat({url:'@(apiUrl+"del")',confirm:'确定要删除吗'});"/>
    <input type="button" ID="DelAll_B" class="btn btn-outline-danger" value="@Resources.L.清空回收站" onclick="mvcpage.del({url:'@(apiUrl+"clear")',confirm:'确定要清空回收站吗'});"/>
</div>     
</div>

}
@section script{
<script>
function ShowPopover() { }
</script>
}